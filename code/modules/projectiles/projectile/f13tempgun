/obj/item/projectile/instituterifle
	name = "Institute Rifle"
	icon_state = "lasercannon"
	desc = "Weapon created by the Institute to protect their synthetic coursers and workers by the dozen."
	ammo_type = list(/obj/item/ammo_casing/energy/f13temp, /obj/item/ammo_casing/energy/f13temp/hot)
	cell_type = "/obj/item/stock_parts/cell/high"
	pin = null

	/obj/item/ammo_casing/energy/f13temp
	projectile_type = /obj/item/projectile/f13temp/cryo
	select_name = "freeze"
	e_cost = 250
	fire_sound = 'sound/weapons/pulse3.ogg'

/obj/item/ammo_casing/energy/f13temp/hot
	/obj/item/projectile/f13temp/hot
	select_name = "melt"

/obj/item/projectile/f13temp
	name = "freeze beam"
	icon_state = "ice_2"
	damage = 0
	damage_type = BURN
	nodamage = FALSE
	flag = "energy"
	var/temperature = 100

/obj/item/projectile/f13temp/on_hit(atom/target, blocked = 0)
	. = ..()
	if(isliving(target))
		var/mob/living/L = target
		L.adjust_bodytemperature(((100-blocked)/100)*(temperature - L.bodytemperature)) // the new body temperature is adjusted by 100-blocked % of the delta between body temperature and the bullet's effect temperature

/obj/item/projectile/f13temp/hot
	name = "heat beam"
	temperature = 700

/obj/item/projectile/f13temp/cryo
	name = "cryo beam"
	range = 3
	temperature = -540 // Single slow shot reduces temp greatly
